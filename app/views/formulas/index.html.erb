<h1>Listing formulas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Formula</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @formulas.each do |formula| %>
  <tr>
    <td><%= formula.name %></td>
    <td><%= formula.to_s %></td>
    <td><%= link_to 'Show', formula %></td>
    <td><%= link_to 'Edit', edit_formula_path(formula) %></td>
    <td><%= link_to 'Destroy', formula, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

