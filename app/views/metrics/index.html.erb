<h1>Listing metrics</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Source</th>
    <th>Direction</th>
    <th>Qualitative</th>
    <th>Val type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @metrics.each do |metric| %>
  <tr>
    <td><%= metric.name %></td>
    <td><%= metric.description %></td>
    <td><%= metric.source %></td>
    <td><%= metric.direction %></td>
    <td><%= metric.qualitative %></td>
    <td><%= metric.val_type %></td>
    <td><%= link_to 'Show', metric %></td>
    <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
    <td><%= link_to 'Destroy', metric, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

